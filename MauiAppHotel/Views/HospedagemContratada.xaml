<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.HospedagemContratada"
             Title="HospedagemContratada"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource OffBlack}">
    
    <VerticalStackLayout VerticalOptions="CenterAndExpand">

        <Label Text="Suíte Super Luxo"
               TextColor="{StaticResource Cyan}"
               FontFamily="WDXL"
               FontSize="50"
               HorizontalTextAlignment="Center"
        />

        <Frame Margin="10">
            <HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5">
                    <Label Text="Adultos:" />
                    <Label Text="2" TextColor="LightGreen" />
                </HorizontalStackLayout>

                <HorizontalStackLayout Spacing="5" Margin="15,0,0,0">
                    <Label Text="Crianças:" />
                    <Label Text="1" TextColor="LightGreen" />
                </HorizontalStackLayout>

            </HorizontalStackLayout>
        </Frame>

        <Frame Margin="10">
            
            <Grid ColumnDefinitions="*, *, *"
                  RowDefinitions="Auto, Auto">

                <Label Grid.Row="0" Grid.Column="0" Text="Check-in:" />
                <Label Grid.Row="0" Grid.Column="1" Text="Check-out:" />
                <Label Grid.Row="0" Grid.Column="2" Text="Estadia:" />

                <Label Grid.Row="1" Grid.Column="0" Text="02/11/2025" />
                <Label Grid.Row="1" Grid.Column="1" Text="10/11/2025:" />
                <Label Grid.Row="1" Grid.Column="2" Text="5" />

            </Grid>
        </Frame>

        <Frame Margin="10">
            <HorizontalStackLayout Spacing="5">
                <Label Text="Valor Total:"
                       TextColor="Red"/>
                <Label Text="R$ 500,00"
                       TextColor="LightGreen"/>
            </HorizontalStackLayout>
        </Frame>

        <Button Text="Voltar"
                TextColor="White"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                BackgroundColor="MidnightBlue"
                Clicked="Button_Clicked"/>

    </VerticalStackLayout>
    
    
    
</ContentPage>