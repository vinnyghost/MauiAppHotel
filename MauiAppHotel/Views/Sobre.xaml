<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.Sobre"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource OffBlack}">
    
    <VerticalStackLayout>
        <Label 
            Text="Sobre"
            FontFamily="WDXL"
            Margin="20"
            FontSize="40"
            HorizontalTextAlignment="Center"
            VerticalTextAlignment="Center"
            TextColor="{StaticResource Cyan}"
        />

        <HorizontalStackLayout Margin="10">
            
            <Label Text="Autor:" 
                   FontSize="16" 
                   TextColor="MediumSpringGreen"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center" />
            
            <Label Text=" Vinicius Henrique Ferro de Oliveira." 
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="10">
            <Label Text="Versão:" 
                   FontSize="16" 
                   TextColor="MediumSpringGreen"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            
            <Label Text=" 1.0.0." 
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>

        <HorizontalStackLayout Margin="10">
            <Label Text="Desenvolvido em:" 
                   FontSize="16" 
                   TextColor="MediumSpringGreen"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            
            <Label Text=" Novembro de 2025." 
                   FontSize="14" 
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>

        <Label Margin="10">
            <Label.FormattedText>
                <FormattedString>
                    <Span Text="Copyright © 2025 " 
                          TextColor="MediumSpringGreen" 
                          FontSize="16"/>
                    <Span Text="VinnyGhost. Todos os direitos reservados." 
                          FontSize="14"/>
                </FormattedString>
            </Label.FormattedText>
        </Label>

        <HorizontalStackLayout Margin="10">
            <Label Text="Licença:" 
                   FontSize="16" 
                   TextColor="MediumSpringGreen"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
            
            <Label Text=" Proprietária." 
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   VerticalTextAlignment="Center"/>
        </HorizontalStackLayout>

    </VerticalStackLayout>
</ContentPage>